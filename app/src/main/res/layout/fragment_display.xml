<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.mycolorpicker.SharedViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/frameDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayFragment"
        android:orientation="vertical"
        android:background="#E40C0C">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/textColorCodeHex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#CD1A1A"></TextView>

        <TextView
            android:id="@+id/textColorCodeRGB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red=Green=Blue="></TextView>

    </LinearLayout>
</layout>